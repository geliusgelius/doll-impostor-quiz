{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@backend/*": ["./api/*"],
      "@assets/*": ["./src/assets/*"],
      "@styles/*": ["./src/styles/*"]
    },
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"],
    "typeRoots": ["node_modules/@types", "node_modules/@vercel/node/types"],
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src/**/*", "api/**/*", "vite.config.ts", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
