{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "NodeNext", // Или "ESNext" для фронтенда
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@backend/*": ["./server/*"], // Папка для Node.js сервера
      "@api/*": ["./api/*"] // Vercel Serverless Functions
    },
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"],
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "server/**/*",
    "api/**/*",
    "vite.config.ts",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
